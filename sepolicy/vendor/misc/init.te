# Allow init to read and write to vendor_sysfs_graphics
allow init vendor_sysfs_graphics:dir search;
allow init vendor_sysfs_graphics:file rw_file_perms;
allow surfaceflinger hal_graphics_composer_default:file open;

# cgroup
allow vendor_init cgroup:file getattr;

# allow init write and set attribute to proc
allow init proc:file { setattr read write };
